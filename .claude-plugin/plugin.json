{
	"name": "engram",
	"description": "Persistent memory for Claude Code. Remember decisions, recall past context, and maintain institutional knowledge across sessions.",
	"version": "1.2.0",
	"author": {
		"name": "Chris Cheney",
		"email": "chris@cheney.dev",
		"url": "https://github.com/ccheney"
	},
	"homepage": "https://rawcontext.com/engram",
	"repository": "https://github.com/rawcontext/engram-claude-plugin",
	"license": "MIT",
	"keywords": ["agent-memory", "context", "knowledge-graph", "ai-agent", "claude-code", "mcp", "context-graph"],
	"mcpServers": {
		"engram": {
			"command": "npx",
			"args": ["-y", "@rawcontext/engram-mcp"]
		}
	},
	"hooks": {
		"SessionStart": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ingest.sh",
						"timeout": 10
					}
				]
			}
		],
		"SessionEnd": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ingest.sh",
						"timeout": 10
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ingest.sh",
						"timeout": 10
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": ".*",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ingest.sh",
						"timeout": 10
					}
				]
			}
		]
	}
}
